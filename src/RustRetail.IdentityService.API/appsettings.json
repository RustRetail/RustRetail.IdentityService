{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "RustRetail.IdentityService",
    "Audience": "RustRetail",
    "SecretKey": "SecretKey",
    // 24 hours (1 Day)
    "AccessTokenExpiryInMilliseconds": 86400000,
    // 7 days (1 Week)
    "RefreshTokenExpiryInMilliseconds": 604800000
  },
  "AuthenticationSettings": {
    "MaxFailedLoginAttempts": 5,
    // 15 minutes
    "LockoutDurationInMilliseconds": 900000
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 15672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "RustRetail.IdentityService"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      // Console log for development and debugging
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{Scope}] {Message:lj}{NewLine}{Exception}"
        }
      },
      // Compact JSON log for structured logging
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.json",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      // Human readable text log
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
